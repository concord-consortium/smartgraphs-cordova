<script>
var categories = [
                  'linear-equations',
                  'quadratic-equations',
                  'transformations-functions', 
                  'exponential-functions'
                 ];
function toggleActivities(cat) {
  for ( var i = 0; i <= categories.length; i++) {
    if (categories[i] != cat) {
      $('#' + categories[i]).hide('blind', 200);	
    }
  }
  $('#' + cat).toggle('blind', '500', function(){
    $('html,body').animate({scrollTop: $(this).offset().top - 192}, 300);
  });
}
</script>
